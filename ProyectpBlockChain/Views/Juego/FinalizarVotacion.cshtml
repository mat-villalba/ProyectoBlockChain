﻿@using ProyectoBlockChain.Logica.Core
@model ResultadoVotacionDTO

@{
    ViewData["Title"] = "Resultado de la Votación";
}

<h2 class="mt-3">Resultado de la votación</h2>

<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title">Partida @Model.PartidaId - Capítulo @Model.CapituloId</h4>

        <div class="mt-3">
            <p><strong>Votos por A:</strong> @Model.VotosA</p>
            <p><strong>Votos por B:</strong> @Model.VotosB</p>
            <p><strong>Ganador:</strong> 
                <span class="badge bg-success">@Model.Ganador</span>
            </p>

            @if (Model.Desempate)
            {
                <p class="text-warning"><strong>Hubo un empate.</strong>  
                    Se aplicó el criterio de desempate automático → Ganador: @Model.Ganador
                </p>
            }

            <hr />

            <p><strong>Transacción registrada en Blockchain:</strong></p>
            <p>
                <span class="text-muted">@Model.TxHash</span>
            </p>
        </div>

        <a asp-controller="Juego" asp-action="Jugar" class="btn btn-primary mt-3">Continuar juego</a>
    </div>
</div>