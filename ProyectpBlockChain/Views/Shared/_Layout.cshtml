﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - practica</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/juego.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/resultadosVotos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/resultadosFinales.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/registroVotos.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a asp-area="" asp-controller="Inicio" asp-action="Index"><img src="~/logito.png" alt="Logo" /></a>
        <nav>
            <p class="titulo-animado">
                Vas a explorar un mundo donde tus decisiones y la tecnología se combinan.
            </p>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer-links">
            <a href="#">Sobre Nosotros</a>
            <a href="#">Servicios</a>
            <a href="#">Contacto</a>
            <a href="#">Política de Privacidad</a>
        </div>
        <p>&copy; 2025 Tp Progra Web 2</p>
    </footer>

    <!-- (Scripts principales que tu Layout ya tenía) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--
      Renderiza la sección "Scripts" definida en las vistas.
      'required: false' significa que no todas las vistas están obligadas
      a tener una sección "Scripts".
    -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>