@model ProyectoBlockChain.Web.Models.RegistroViewModel
@{
    ViewData["Title"] = "Registro de Jugador";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Registro de Nuevo Jugador</h2>
        <p class="text-center text-muted">Conecta tu wallet y completa tus datos para registrarte.</p>
        <hr />

        <!-- Mostrar errores de TempData (si el registro falla) -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        <!-- Usamos un <form> estándar. El ID 'registroForm' es usado por el JS -->
        <form id="registroForm" asp-action="Registrar" method="post">

            <!-- (Req. SOLID) Token de seguridad CSRF -->
            @Html.AntiForgeryToken()

            <!-- Resumen de errores de validación del modelo (si los tuvieras) -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo oculto para la Wallet -->
            <!-- JavaScript lo llenará antes de enviar -->
            <input type="hidden" asp-for="ContrasenaHash" id="walletAddressInput" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre de Usuario (Nickname)</label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu alias en el juego" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" required />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                <input asp-for="Correo" type="email" class="form-control" placeholder="tu@correo.com" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type-="submit" class="btn btn-primary btn-lg">
                    Conectar Wallet y Registrar
                </button>
                <a asp-action="IniciarSesion" class="btn btn-outline-secondary">Ya tengo cuenta</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        document.getElementById("registroForm").addEventListener("submit", async function (event) {
            // 1. Detener el envío normal del formulario
            event.preventDefault();

            // Verificar si MetaMask está instalado
            if (typeof window.ethereum === 'undefined') {
                alert("Por favor, instala MetaMask para continuar.");
                return;
            }

            try {
                // 2. Pedir al usuario que conecte su wallet
                const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                const walletAddress = accounts[0];

                if (walletAddress) {
                    // 3. Poner la wallet en el campo oculto
                    document.getElementById("walletAddressInput").value = walletAddress;

                    // 4. Enviar el formulario (ahora con la wallet)
                    this.submit();
                } else {
                    alert("No se pudo obtener la dirección de la wallet.");
                }
            } catch (error) {
                console.error("Error al conectar con MetaMask:", error);
                alert("Error al conectar con MetaMask. Asegúrate de aprobar la solicitud.");
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}